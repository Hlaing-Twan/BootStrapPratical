    <script>
        let type1=document.getElementById("type1");
        let type2=document.getElementById("type2");
        let type3=document.getElementById( "type3");

       let price1=type1.value;

        type1.innerHTML =`1600000 (15 ပဲရည်)`;
        type2.innerHTML =`1600000 (15 ပဲရည်)`;
        type3.innerHTML =`1600000 (15 ပဲရည်)`;


        // input
        let one=document.getElementById("one");
        let two=document.getElementById("two");
        let three=document.getElementById("three");
        let four=document.getElementById("four");
        let calculate=document.getElementById("calculate");
        let remove=document.getElementById("remove");
        let r1=document.getElementById("r1");
        let r2=document.getElementById("r2");
        let r3=document.getElementById("r3");





        // calculate

        calculate.addEventListener("click",function (e) {
            e.preventDefault();
                let cone=Number(one.value);
                let ctwo=Number(two.value);
                let cthree=Number(three.value);
                let result=0;
                let tax=0;
                let totalPrice=0;


                let cfour=Number(four.value);

                if(cfour ==""){
                    cfour=1600000;
                }
                if(cone==""){
                    cone=0;
                }
                if(ctwo ==""){
                    ctwo=0;
                }
                if(cthree==""){
                    cthree=0;
                }

                result=(cthree/8+ctwo/16+cone)*cfour;
                tax=result*0.05;
                totalPrice=tax+result;
                console.log(cone,ctwo,cthree,cfour);
                //disabled
                one.setAttribute("disabled",true);
                two.setAttribute("disabled",true);
                three.setAttribute("disabled",true);
                four.setAttribute("disabled",true);

                r1.innerHTML =`${result} ကျပ်`;
                r2.innerHTML =`${tax} ကျပ်`;
                r3.innerHTML =`${totalPrice} ကျပ်`;



        })

        // delete
        remove.addEventListener("click",function (e) {
            e.preventDefault();
                one.value =``;
                two.value =``;
                three.value=``;
                r1.innerHTML =`0 ကျပ်`;
                r2.innerHTML =`0 ကျပ်`;
                r3.innerHTML =`0 ကျပ်`;

        })



    </script>
