    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-4">
 <!--output part -->
                <div class="">


                    <table class="table border border-1 my-3 mb-3">

                      <tbody>

                        <tr>

                          <td>စျေးနှုန်း</td>
                          <td class="d-flex justify-content-end" id="r1">0 ကျပ်</td>

                        </tr>
                        <tr>

                          <td >အခွန်</td>
                          <td class="d-flex justify-content-end" id="r2">0 ကျပ်</td>
                        </tr>
                      <tr>

                          <td>စုစုပေါင်း</td>
                          <td class="d-flex justify-content-end" id="r3">0 ကျပ်</td>

                        </tr>
                      </tbody>
                    </table>
<!--input part -->
                 <div class="row">
                     <div class=" col-6">
                        <form action="" id="calcform">

                            <div class="mb-3">
                                <label class="form-label">ပေါက်စျေး</label>
                                <select class="form-select" name="" id="form" >
                                    <option value="16" id="type1">1600000 (16 ပဲရည်)</option>
                                    <option value="15" id="type2"></option>
                                    <option value="14" id="type3"></option>
                             
        
                                </select>
                            </div>
                     </div>
                     <div class="col-6">
                        <div class="mb-3">
                            <label for="" class="form-label ">စျေးနှုန်း</label>
                            <input type="text" id="four" class="form-control border"  placeholder="0">
                     </div>
                 </div>   
                
<!-- button part -->
                    <div class="row mb-5 justify-content-around">
                        <div class="col-4">
                            <label class="form-label"> ကျပ်</label>
                            <input type="text" id="one" class="form-control" >
                        </div>

                        <div class="col-4">
                            <label class="form-label">ပဲ</label>
                            <input type="text" id="two" class="form-control">
                        </div>

                         <div class="col-4">
                            <label class="form-label">ရွေး</label>
                            <input type="text" id="three" class="form-control">
                        </div>
                    </div>

                    <button id="calculate"  class="btn btn-primary w-100 mb-3">တွက်ပါ</button>

                    <button id="remove"  class="btn btn-danger w-100">ရှင်းရန်</button>

                </form>

            </div>

            </div>
        </div>
    </div>

    <script src="node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        //start
        let form=document.getElementById("form");
        let type1=document.getElementById("type1");
        let type2=document.getElementById("type2");
        let type3=document.getElementById( "type3");
        let four=document.getElementById("four");


        var price1=1600000;
        var price2=(1600000/16)*15;
        var price3=(1600000/16)*13;        

        type1.innerHTML =price1+`(16 ပဲရည်)`;
        type2.innerHTML = price2+`(15 ပဲရည်)`;
        type3.innerHTML = price3+`(13 ပဲရည်)`;

        form.addEventListener("click",function(){
            four.setAttribute("disabled",true);
        })

        four.addEventListener("click",function(){
            form.setAttribute("disabled",true);
        })


        // get input
        let one=document.getElementById("one");
        let two=document.getElementById("two");
        let three=document.getElementById("three");
      
        let calculate=document.getElementById("calculate");
        let remove=document.getElementById("remove");
        let r1=document.getElementById("r1");
        let r2=document.getElementById("r2");
        let r3=document.getElementById("r3");





        // calculate

        calculate.addEventListener("click",function (e) {
            e.preventDefault();
                let cone=Number(one.value);
                let ctwo=Number(two.value);
                let cthree=Number(three.value);
                let result=0;
                let deciResult=0;
                let tax=0;
                let deciTax=0;
                let totalPrice=0;
                let deciTotal=0;
                let cfour=0;
                let isrole=form.hasAttribute("disabled");

                // first condition
                if(isrole){
                    
                    cfour=Number(four.value);
                   
                    
                    result=(cthree/8+ctwo/16+cone)*cfour;
                    deciResult=result.toFixed(2);
                    tax=result*0.05;
                    deciTax=tax.toFixed(2);
                    totalPrice=tax+result;
                    deciTotal=totalPrice.toFixed(2)
                    

                 
                    //disabled
                    one.setAttribute("disabled",true);
                    two.setAttribute("disabled",true);
                    three.setAttribute("disabled",true);
                    four.setAttribute("disabled",true);

                    //output
                    r1.innerHTML =`${deciResult} ကျပ်`;
                    r2.innerHTML =`${deciTax} ကျပ်`;
                    r3.innerHTML =`${deciTotal} ကျပ်`;

                }

                // second condition
                else{
                    if(type1.value =="16"){
                    cfour=price1;
                    }
                    else if(type2.value ==`15`){
                        cfour=price2;
                    }
                    else{
                        cfour=price3;
                    }

                    if(cone==""){
                        cone=0;
                    }
                    if(ctwo ==""){
                        ctwo=0;
                    }
                    if(cthree==""){
                        cthree=0;
                    }

                    result=(cthree/8+ctwo/16+cone)*cfour;
                    deciResult=result.toFixed(2);
                    tax=result*0.05;
                    deciTax=tax.toFixed(2);
                    totalPrice=tax+result;
                    deciTotal=totalPrice.toFixed(2)
                    
                    
                    //disabled
                    one.setAttribute("disabled",true);
                    two.setAttribute("disabled",true);
                    three.setAttribute("disabled",true);
                    form.setAttribute("disabled",true);
                    four.setAttribute("disabled",true);
                    
                    //output
                    r1.innerHTML =`${deciResult} ကျပ်`;
                    r2.innerHTML =`${deciTax} ကျပ်`;
                    r3.innerHTML =`${deciTotal} ကျပ်`;

                    }

               


        })

        // delete
        remove.addEventListener("click",function (e) {
            e.preventDefault();

                //enabled            
                one.disabled=false;
                two.disabled=false;
                three.disabled=false;
                four.disabled=false;
                form.disabled=false;

                
                one.value =``;
                two.value =``;
                three.value=``;
                
                r1.innerHTML =`0 ကျပ်`;
                r2.innerHTML =`0 ကျပ်`;
                r3.innerHTML =`0 ကျပ်`;

        })



    </script>
